{
  "compilerOptions": {
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["unplugin-vue-define-options/macros-global" /* ... */],
    "typeRoots": [
      "./node_modules/@types/",
      "../components/types"
    ] /* 指定多个文件夹，这些文件夹的作用类似于 './node_modules/@types'. */
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue",
    "../components/types/**/*.d.ts"
  ]
}
